[user]
	name = shusay
	email = shusay.t@gmail.com

[color]
  ui=auto

[core]
	excludesfile = /Users/shusay/.gitignore
  editor=vim

[alias]
  st = status
  l = log
  mst = checkout master
  br = branch
  co = checkout
  aa = add -A
  cm = commit
  cmm = commit -m
  origin = org
  merge = merge --no-ff
  pl = pull
  ps = push

[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path =
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
  trustExitCode = true

[tig "bind"]
  generic = g move-first-line
  generic = G move-last-line
